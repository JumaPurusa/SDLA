<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/relative_layout"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/document_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@null"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_toRightOf="@+id/view2"
        android:id="@+id/document_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="document name"
        android:textColor="@color/boldTextColor"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"/>

    <TextView
        android:id="@+id/file_size"
        android:layout_below="@+id/document_name"
        android:layout_alignLeft="@+id/document_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:text="size"
        android:textSize="12sp"
        />





    <View
        android:id="@+id/divider"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignLeft="@+id/file_size"
        android:layout_below="@+id/file_size"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#86c3c4be"/>


</RelativeLayout>